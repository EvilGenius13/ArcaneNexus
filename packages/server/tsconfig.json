{
  "compilerOptions": {
    "target": "ES6", 
    "module": "CommonJS",
    "strict": true, 
    "esModuleInterop": true, 
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true, 
    "outDir": "./dist", 
    "rootDir": "./src", 
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}